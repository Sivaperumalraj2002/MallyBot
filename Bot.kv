#:kivy 2.1.0
ScreenManager:
    LoginScreen:
    RegisterScreen:
    ChatScreen:
        name:'chat'

<ChatScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(10)
        spacing: dp(10)
        padding: dp(5)
        canvas.before:
            Color:
                rgba: 0.97, 0.97, 0.97, 1
            Rectangle:
                pos: self.pos
                size: self.size

        # Top Bar with Chat History Button
        BoxLayout:
            size_hint_y: None
            height: dp(40)
            spacing: dp(10)

            Button:
                text: 'Chat History'
                size_hint_x: None
                width: dp(120)
                on_press: root.open_chat_history()
            Button:
                text: 'Logout'
                size_hint_x: None
                width: dp(120)
                on_press: 
                    app.root.current = 'login'; root.new_session_id()
                # on_press: root.new_session_id()
                # on_release: root.new_session_id()

        # Chat messages display
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.85

            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                bar_width: dp(5)

                Label:
                    id: chat_log
                    text: root.chat_history
                    font_size: '16sp'
                    size_hint_y: None
                    height: self.texture_size[1]
                    text_size: self.width - dp(20), None
                    markup: True
                    color: 0.1, 0.1, 0.1, 1
                    padding: dp(10), dp(10)

        # Message Input & Send Button
        BoxLayout:
            size_hint_y: 0.08
            spacing: dp(10)
            padding: dp(5)

            TextInput:
                id: user_input
                hint_text: "Type your message here..."
                multiline: False
                font_size: '16sp'
                size_hint_x: 0.85
                background_normal: ''
                background_color: 1, 1, 1, 1
                foreground_color: 0, 0, 0, 1
                padding_y: dp(10)

            Button:
                text: 'Send'
                size_hint_x: 0.15
                background_color: 0.2, 0.6, 0.86, 1
                color: 1, 1, 1, 1
                bold: True
                on_press: root.chatStream()


<LoginScreen>:
    name: 'login'
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 1  # Light background
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.6, 0.7
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            padding: dp(40)
            spacing: dp(20)
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20]

            Label:
                text: 'Welcome Back'
                font_size: '28sp'
                bold: True
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]

            Label:
                text: 'Please login to continue'
                font_size: '16sp'
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]
                color: 0.3, 0.3, 0.3, 1

            BoxLayout:
                orientation: 'vertical'
                spacing: dp(10)

                BoxLayout:
                    spacing: dp(10)
                    size_hint_y: None
                    height: dp(40)
                    Label:
                        text: 'Username:'
                        size_hint_x: 0.3
                        color: 0.2, 0.2, 0.2, 1
                        font_size: '16sp'
                    TextInput:
                        id: login_username
                        hint_text: 'Enter username'
                        multiline: False
                        font_size: '16sp'

                BoxLayout:
                    spacing: dp(10)
                    size_hint_y: None
                    height: dp(40)
                    Label:
                        text: 'Password:'
                        size_hint_x: 0.3
                        color: 0.2, 0.2, 0.2, 1
                        font_size: '16sp'
                    TextInput:
                        id: login_password
                        hint_text: 'Enter password'
                        password: True
                        multiline: False
                        font_size: '16sp'

            Label:
                id: login_msg
                text: ''
                color: 1, 0, 0, 1
                font_size: '14sp'
                halign: 'center'
                size_hint_y: None
                height: dp(20)

            BoxLayout:
                size_hint_y: None
                height: dp(50)
                spacing: dp(20)

                Button:
                    text: 'Login'
                    background_color: 0.2, 0.6, 0.86, 1
                    color: 1, 1, 1, 1
                    bold: True
                    on_press: root.do_login()

                Button:
                    text: 'Register'
                    background_color: 0.9, 0.9, 0.9, 1
                    color: 0.2, 0.6, 0.86, 1
                    on_press: app.root.current = 'register'

<RegisterScreen>:
    name: 'register'
    FloatLayout:
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 1  # Light background
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.6, 0.6
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            padding: dp(40)
            spacing: dp(20)
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20]

            Label:
                text: 'Create an Account'
                font_size: '28sp'
                bold: True
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]

            Label:
                text: 'Please fill in the fields'
                font_size: '16sp'
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]
                color: 0.3, 0.3, 0.3, 1

            BoxLayout:
                orientation: 'vertical'
                spacing: dp(10)

                BoxLayout:
                    size_hint_y: None
                    height: dp(40)
                    spacing: dp(10)
                    Label:
                        text: 'Username:'
                        size_hint_x: 0.3
                        color: 0.2, 0.2, 0.2, 1
                        font_size: '16sp'
                    TextInput:
                        id: reg_username
                        hint_text: 'Choose a username'
                        multiline: False
                        font_size: '16sp'

                BoxLayout:
                    size_hint_y: None
                    height: dp(40)
                    spacing: dp(10)
                    Label:
                        text: 'Password:'
                        size_hint_x: 0.3
                        color: 0.2, 0.2, 0.2, 1
                        font_size: '16sp'
                    TextInput:
                        id: reg_password
                        hint_text: 'Choose a password'
                        password: True
                        multiline: False
                        font_size: '16sp'

            Label:
                id: reg_msg
                text: ''
                color: 0, 0.6, 0, 1
                font_size: '14sp'
                halign: 'center'
                size_hint_y: None
                height: dp(20)

            BoxLayout:
                size_hint_y: None
                height: dp(50)
                spacing: dp(20)

                Button:
                    text: 'Register'
                    background_color: 0.2, 0.6, 0.2, 1
                    color: 1, 1, 1, 1
                    bold: True
                    on_press: root.do_register()

                Button:
                    text: 'Back to Login'
                    background_color: 0.9, 0.9, 0.9, 1
                    color: 0.2, 0.6, 0.86, 1
                    on_press: app.root.current = 'login'
